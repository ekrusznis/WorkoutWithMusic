<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:text="LOWER KETTLEBELL"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="WarmUp:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="Jump Rope - 2 Minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/jumpropeButton"
            android:background="@drawable/visibility"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/kbsquatstv"
            android:text="20 Kettlebell Squats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/kbsquatsButton"
                android:background="@drawable/visibility"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:text="5 Burpees"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/kbsquatstv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/burpeesbutton"
                android:layout_below="@+id/kbsquatsButton"
                android:background="@drawable/visibility"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <TextView
            android:text="15 Kettlebell Squats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="4 Burpees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <TextView
            android:text="10 Kettlebell Squats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="3 Burpees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <TextView
            android:text="5 Kettlebell Squats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="2 Burpees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <View
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <TextView
            android:text="3 Kettlebell Squats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="1 Burpee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>
</FrameLayout>